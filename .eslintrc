{
		"parser": "babel-eslint",
		"parserOptions": {
				"ecmaVersion": 6,
				"sourceType": "module"
		},
		"plugins": ["babel"],
		"extends": ["airbnb/base"],
		"env": {
				"browser": true,
				"jquery": true,
				"es6": true
		},
		"globals": {
				"Promise": true
		},
		"rules": {
				"indent": ["off", "tab", { "SwitchCase": 1 }],
				"comma-dangle": 0,
				"linebreak-style": [
						"off",
						"always"
				],
				"eol-last": ["off", "always"],
				"no-console": "off",
				"yoda": 0,
				"space-before-function-paren": 0,
				"func-names": 0,
				"arrow-parens": 0,
				"no-mixed-operators": 0,
				"no-plusplus": 0,
				"no-tabs": 0
		}
}